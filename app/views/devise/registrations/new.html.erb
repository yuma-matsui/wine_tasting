<div class="registration-wrapper">
  <%= render 'shared/sub_header' %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="registration-form container">
          <h2>会員登録</h2>
          <%= render 'shared/error_messages', model: @user %>
          <div class="row">
            <div class="col-sm-12 col-md-6">
              <%= f.label :'First Name' %>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "lat_name", placeholder: '半角英数字4文字以上' %>
            </div>
            <div class='col-sm-12 col-md-6 mt-3 mt-md-0'>
              <%= f.label :'Last Name' %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: '半角英数字4文字以上' %>
            </div>
          </div>

          <div class="field row mt-4">
            <div class="col-12">
              <%= f.label :'メールアドレス' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-100" %>
            </div>
          </div>

          <div class="row mt-4">
            <div class="field col-sm-12 col-md-6">
              <%= f.label :'パスワード' %>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: '半角英数字8文字以上', class:"w-100" %>
            </div>

            <div class="field col-sm-12 col-md-6 mt-3 mt-md-0">
              <%= f.label :'確認用パスワード' %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-100" %>
            </div>
          </div>

          <div class="actions mt-4 text-center">
            <%= f.submit "登録", class:"register-btn" %>
          </div>
        </div>
      <% end %>
  <%= render 'shared/sub_footer' %>
</div>