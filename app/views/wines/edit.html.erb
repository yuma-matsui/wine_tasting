<%= render 'shared/main_header'%>
<%= form_with model: @wine, local: true do |f| %>
  <div id="edit-wrapper">
    <div class="edit">
      <%= render 'shared/error_messages2', model: @wine %>
      <div class="edit__main">
        <div class="mb-5">
          <%= f.label :name, 'Name', class:"edit__form-label" %>
          <span class="badge bg-danger text-white">必須</span><br>
          <%= f.text_field :name, class:"w-50 edit__form-name" %>
        </div>
        <div class="mb-5">
          <%= f.label :image, 'Image', class:"edit__form-label" %>
          <span class="badge bg-danger text-white">必須</span><br>
          <%= f.file_field :image, class: "edit__form-img"%>
        </div>
      </div>
      <div class="edit__description d-md-flex justify-content-between">
        <ul class="edit__ul">
          <ul class="edit__description-ul">
            <h3 class="edit__description-title">Detail</h3>
            <li class="edit__form-item">
              <%= f.label :color_id, 'Color', class:"edit__form-label" %>
              <span class="badge bg-danger text-white">必須</span><br>
              <%= f.collection_select(:color_id, Color.all, :id, :name, {}, { class:"edit__form-select"}) %>
            </li>
            <li class="edit__form-item">
              <%= f.label :variety_id, 'Variety', class:"edit__form-label" %>
              <span class="badge bg-danger text-white">必須</span><br>
              <%= f.collection_select(:variety_id, Variety.all, :id, :name, {}, { class:"edit__form-select"}) %>
            </li>
            <li class="edit__form-item">
              <%= f.label :country_id, 'Country', class:"edit__form-label" %>
              <span class="badge bg-danger text-white">必須</span><br>
              <%= f.collection_select(:country_id, Country.all, :id, :name, {}, { class:"edit__form-select"}) %>
            </li>
          </ul>
          <ul class="edit__description-ul">
            <li class="edit__form-item">
              <%= f.label :vintage, 'Vintage', class:"edit__form-label" %>
              <span class="badge bg-danger text-white">必須</span><br>
              <%= f.date_select(:vintage, 
                prompt:'ヴィンテージ',
                start_year: ( Time.now.year - 1),
                end_year: 1900,
                discard_month: true,
                discard_day: true, class:'w-100') %>
            </li>
            <li class="edit__form-item">
              <%= f.label :alcohol_volume_id, 'Alcohol Volume', class:"edit__form-label" %>
              <span class="badge bg-danger text-white">必須</span><br>
              <%= f.collection_select(:alcohol_volume_id, AlcoholVolume.all, :id, :name, {}, {class:"edit__form-select"}) %>
            </li>
          </ul>
        </ul>
        <ul class="edit__ul mt-5 mt-md-0">
          <h3 class="edit__description-title">Flavor</h3>
          <ul class="edit__description-ul">
            <li class="edit__form-item">
              <%= f.label :impression_id, 'First Impression', class:"edit__form-label" %>
              <span class="badge bg-danger text-white">必須</span><br>
              <%= f.collection_select(:impression_id, Impression.all, :id, :name, {}, {class:"edit__form-select"}) %>
            </li>
            <li class="edit__form-item">
              <%= f.label :flavor_id, 'Flavor', class:"edit__form-label" %>
              <span class="badge bg-danger text-white">必須</span><br>
              <%= f.collection_select(:flavor_id, Flavor.all, :id, :name, {}, {class:"edit__form-select"}) %>
            </li>
            <li class="edit__form-item">
              <%= f.label :second_flavor_id, 'Flavor2', class:"edit__form-label" %>
              <span class="badge bg-danger text-white">必須</span><br>
              <%= f.collection_select(:second_flavor_id, SecondFlavor.all, :id, :name, {}, {class:"edit__form-select"}) %>
            </li>
          </ul>
        </ul>
        <ul class="edit__ul mt-5 mt-md-0">
          <h3 class="edit__description-title">Taste</h3>
          <ul class="edit__description-ul">
            <li class="edit__form-item">
              <%= f.label :acidity_level_id, 'Acidity', class:"edit__form-label" %>
              <span class="badge bg-danger text-white">必須</span><br>
              <%= f.collection_select(:acidity_level_id, AcidityLevel.all, :id, :name, {}, {class:"edit__form-select"}) %>
            </li>
            <li class="edit__form-item">
              <%= f.label :tannic_level_id, 'Tannic(Red)', class:"edit__form-label" %>
              <span class="badge bg-secondary text-white">任意</span><br>
              <%= f.collection_select(:tannic_level_id, TannicLevel.all, :id, :name, {}, {class:"edit__form-select"}) %>
            </li>
          </ul>
        </ul>
      </div>
      <div class="edit__comment">
        <%= f.label :comment, 'Comment', class:"edit__form-label" %>
        <span class="badge bg-danger text-white">必須</span>
        <%= f.text_area :comment, placeholder: 'フルコメントでワインについてまとめましょう。', class:"form__comment" %>
      </div>
      <div class="btn-wrap"><%= f.submit "更新", class:"edit__form-btn" %></div>
    </div>
  </div>
<% end %>
<%= render 'shared/main_footer'%>